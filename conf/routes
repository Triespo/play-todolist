# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Consultar una tarea

GET     /tasks/:id              controllers.Application.consultTask(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /tasks                  controllers.Application.tasks
POST    /tasks                  controllers.Application.newTask

# Asignar tareas usuarios

GET      /:user/tasks            controllers.Application.userTasks(user: String)
POST     /:user/tasks            controllers.Application.addTask(user: String)

# Borrar una tarea
DELETE   /tasks/:id              controllers.Application.deleteTask(id: Long)